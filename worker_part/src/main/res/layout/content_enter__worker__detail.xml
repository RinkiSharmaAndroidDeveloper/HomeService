<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:background="@drawable/bublebg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/BackClose"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/backarrow" />

        <TextView
            android:id="@+id/logintype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_50sdp"
            android:gravity="center"
            android:text="Worker Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

    </LinearLayout>
   <!-- <ImageView
        android:id="@+id/background_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:id="@+id/sbmt_linr"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/locationbackround"
                android:gravity="center_vertical"
                android:hint="@string/firstname"
                android:inputType="text"
                android:padding="@dimen/_6sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/editTextName" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/locationbackround"
                android:gravity="center_vertical"
                android:hint="@string/lastname"
                android:id="@+id/lastname"
                android:inputType="text"
                android:padding="@dimen/_6sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="@drawable/locationbackround"
            android:gravity="center_vertical"
            android:hint="@string/number"
            android:inputType="phone"
            android:padding="@dimen/_6sdp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"

            android:gravity="center_vertical"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/professionlism"
                android:textColor="@color/white"
                  android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:id="@+id/professionspinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:spinnerMode="dialog"
                android:padding="@dimen/_6sdp"

                android:background="@drawable/locationbackround"
                ></Spinner>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Qualification"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_13sdp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/locationbackround"
            android:textColor="@color/white"
            android:inputType="text"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/qualification" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/textView" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/locationbackround"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/city" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/buttonbackground"
            android:gravity="center"
            android:id="@+id/addImage"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/custome_prgress_bar"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addimage"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="@drawable/whitebackground"
            android:gravity="center"
            android:id="@+id/submit"
            android:padding="@dimen/_6sdp"
            android:text="@string/submit"
            android:textColor="@color/buttonskycolor"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>

</LinearLayout>
